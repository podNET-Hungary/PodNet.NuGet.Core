<Project>

	<PropertyGroup>
		<LangVersion>12</LangVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<PodNetPackageName>$(MSBuildProjectName)</PodNetPackageName>
		<PackageId>$(PodNetPackageName)</PackageId>
		<Product>$(PodNetPackageName)</Product>
		<PodNetIncludeDefaultIcon>true</PodNetIncludeDefaultIcon>
		<PodNetIncludeDefaultReadmePath>true</PodNetIncludeDefaultReadmePath>
		<PodNetIncludeDefaultSponsorsFile>true</PodNetIncludeDefaultSponsorsFile>
		<PackageIcon>icon.png</PackageIcon>
		<IsPackable>true</IsPackable>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<IncludeSource>true</IncludeSource>
		<ContinuousIntegrationBuild Condition="('$(TF_BUILD)' == 'true') Or ('$(GITHUB_ACTIONS)' == 'true')">true</ContinuousIntegrationBuild>
		<GenerateDocumentationFile Condition="'$(IsRoslynComponent)' != 'true'">true</GenerateDocumentationFile>

		<!-- Version is to be set via Git tagging triggering the build and supplying that tag to `dotnet pack -p:Version`. -->
		<Version Condition="'$(Configuration)' == 'Debug'">0.0.0-debug</Version>
		<PackageVersion>$(Version)</PackageVersion>
		<Authors>podNET Hungary, Gábor Szabó</Authors>
		<Company>podNET Hungary</Company>
		<Copyright>Copyright (c) $([System.DateTime]::Now.Year) podNET Hungary</Copyright>
		<PackageReadMeFile>README.md</PackageReadMeFile>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/podNET-Hungary/$(PodNetPackageName)</RepositoryUrl>
		<PackageProjectUrl>$(RepositoryUrl)</PackageProjectUrl>
		<PackageReleaseNotes>https://github.com/podNET-Hungary/$(PodNetPackageName)/releases</PackageReleaseNotes>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
	</PropertyGroup>

	<ItemGroup>
		<None Condition="'$(PodNetIncludeDefaultIcon)' != 'false'" Include="$(MSBuildThisFileDirectory)icon.png" Pack="true" PackagePath="" />
		<None Condition="'$(PodNetIncludeDefaultReadmePath)' != 'false'" Include="../../README.md" Pack="true" PackagePath="" />
		<None Condition="'$(PodNetIncludeDefaultSponsorsFile)' != 'false'" Include="$(MSBuildThisFileDirectory)SPONSORS.md" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>